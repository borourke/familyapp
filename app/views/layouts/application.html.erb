<!DOCTYPE html>
<html>
  <head>
    <title>Familyapp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="row-fluid">
      <%= render 'layouts/top_bar' %>
    </div>
    <div class="row-fluid">
      <div class="span2">
        <%= render 'layouts/left_menu' %>
      </div>
      <div class="span10">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %> center"><%= value %></div>
        <% end %>
        <div class="full">
          <%= yield %> 
        </div>
      </div>
    </div>
  </body>
</html>
